{
  "header": "Edit Microphone",
  "okResult": "UpdateDevice",
  "name": "EditMicrophone",
  "validate": true,
  "sections": [
    {
      "header": "General",
      "displayType": "Form",
      "items": [
        {
          "text": "Name",
          "value": "",
          "type": "String",
          "bindto": "name"
        },
        {
          "text": "Location",
          "value": 0,
          "type": "SelectButton",
          "bindto": "locationIndex",
          "id": "ddlLocation",
          "options": "LOCATIONS",
          "action": "editLocations",
          "buttontext": "...",
          "help": "Group devices using locations"
        },
        {
          "text": "Permission Groups",
          "value": "",
          "type": "String",
          "bindto": "settings.accessgroups",
          "help": "Example: home,office  - see permissions"
        },
        {
          "text": "Source Type",
          "value": 0,
          "type": "SelectButton",
          "bindto": "settings.sourceindex",
          "id": "ddlSourceType",
          "options": "SOURCETYPES",
          "live": true,
          "action": "editsource",
          "buttontext": "..."
        },
        {
          "text": "Display Style",
          "value": "",
          "type": "Select",
          "bindto": "settings.displaymode",
          "live": true,
          "options": [
            {
              "text": "Analyzer",
              "value": 0,
              "noTranslate": true
            },
            {
              "text": "Level",
              "value": 1,
              "noTranslate": true
            },
            {
              "text": "Historical",
              "value": 2,
              "noTranslate": true
            }
          ]
        },
        {
          "text": "Enabled",
          "value": "",
          "type": "Boolean",
          "bindto": "settings.active",
          "live": true,
          "id": "chkEnable"
        }
      ]
    },
    {
      "header": "Alerts",
      "displayType": "Form",
      "items": [
        {
          "text": "Enabled",
          "value": "",
          "type": "Boolean",
          "bindto": "alerts.active"
        },
        {
          "text": "Mode",
          "value": "",
          "type": "Select",
          "bindto": "alerts.mode",
          "options": [
            {
              "text": "Detected",
              "value": "detected"
            },
            {
              "text": "Not Detected",
              "value": "notdetected"
            }
          ]
        },
        {
          "text": "Sound delay",
          "value": 0,
          "type": "Int32",
          "min": 0,
          "max": 9999,
          "bindto": "detector.soundinterval",
          "help": "Trigger an alert after sound detected (s)"
        },
        {
          "text": "No sound delay",
          "value": 0,
          "type": "Int32",
          "min": 1,
          "max": 9999,
          "bindto": "detector.nosoundinterval",
          "help": "Trigger an alert after silence (s)"
        },
        {
          "text": "Messaging",
          "value": "",
          "type": "Boolean",
          "bindto": "settings.messaging"
        },
        {
          "text": "Push",
          "value": "",
          "type": "Boolean",
          "bindto": "alerts.push"
        },
        {
          "text": "Actions",
          "value": "...",
          "type": "Button",
          "action": "showactions",
          "help": "Specify actions to take on alert"
        },
        {
          "text": "Intervals",
          "value": "",
          "type": "Header",
          "bindto": ""
        },
        {
          "text": " Minimum Interval",
          "value": 0,
          "type": "Int32",
          "min": 1,
          "max": 99999999,
          "bindto": "alerts.minimuminterval",
          "help": "Minimum time between alerts (s)"
        },
        {
          "text": " Group",
          "value": "",
          "type": "String",
          "bindto": "alerts.groupname",
          "help": "Specify a group name to combine intervals with other cameras"
        },
        {
          "text": " Reset Interval",
          "value": 0,
          "type": "Int32",
          "min": 0,
          "max": 99999999,
          "bindto": "alerts.resetinterval",
          "help": "Time to reset after an alert is raised in the group"
        }
      ]
    },
    {
      "header": "Cloud",
      "displayType": "Form",
      "items": [
        {
          "text": "Cloud",
          "value": "",
          "type": "Header"
        },
        {
          "text": " Provider",
          "value": "",
          "type": "Select",
          "bindto": "settings.cloudprovider.provider",
          "id": "ddlCloudProvider",
          "options": "CLOUDPROVIDERS",
          "help": "See Server Settings to enable cloud services"
        },
        {
          "text": " Path",
          "value": "",
          "type": "String",
          "bindto": "settings.cloudprovider.path"
        },
        {
          "text": " Upload Recordings",
          "value": "",
          "type": "Boolean",
          "bindto": "settings.cloudprovider.recordings"
        }
      ]
    },
    {
      "header": "Detector",
      "displayType": "Form",
      "items": [
        {
          "text": "Enabled",
          "value": "",
          "type": "Boolean",
          "bindto": "detector.enabled",
          "live": true
        },
        {
          "text": "Level",
          "value": "",
          "type": "VolumeLevel",
          "help": "Adjust the sensitivity and gain to control sound detection."
        },
        {
          "text": "Sensitivity",
          "value": [],
          "type": "Slider",
          "min": 1,
          "max": 100,
          "range": true,
          "bindto": "detector.minsensitivity,detector.maxsensitivity",
          "id": "arrSensitivity",
          "live": true
        },
        {
          "text": "Gain",
          "value": 0,
          "type": "Decimal",
          "min": 1,
          "max": 100,
          "bindto": "detector.gain",
          "id": "numGain",
          "live": true
        }
      ]
    },
    {
      "header": "Plugin",
      "displayType": "Form",
      "available": "PLUGINS_AVAILABLE",
      "items": [
        {
          "text": "Enabled",
          "value": "",
          "type": "Boolean",
          "bindto": "settings.pluginenabled",
          "live": true,
          "desktoponly": true
        },
        {
          "text": "Plugin",
          "value": 0,
          "type": "SelectButton",
          "bindto": "settings.plugin",
          "id": "ddlPlugin",
          "options": "PLUGINS",
          "live": true,
          "desktoponly": true,
          "action": "editplugin",
          "buttontext": "...",
          "help": "See server settings to add plugins"
        }
      ]
    },
    {
      "header": "Recording",
      "displayType": "Form",
      "items": [
        {
          "text": "Mode",
          "value": "",
          "type": "Select",
          "bindto": "detector.recordmode",
          "options": [
            {
              "text": "Detect",
              "value": 0
            },
            {
              "text": "Alert",
              "value": 1
            },
            {
              "text": "None",
              "value": 2
            }
          ]
        },
        {
          "text": "Filename2",
          "value": "",
          "type": "String",
          "bindto": "recorder.filename",
          "help": "Example: {0:yyyy-MM-dd_HH-mm-ss_fff}"
        },
        {
          "text": "Max Record Time",
          "value": 0,
          "type": "Int32",
          "min": 1,
          "max": 999999999999,
          "bindto": "recorder.maxrecordtime",
          "help": "Maximum time to record before starting a new file (s)"
        },
        {
          "text": "Min Record Time",
          "value": 0,
          "type": "Int32",
          "min": 1,
          "max": 999999999999,
          "bindto": "recorder.minrecordtime",
          "help": "Minimum time to record (s)"
        },
        {
          "text": "Inactivity Timeout",
          "value": 0,
          "type": "Int32",
          "min": 1,
          "max": 999,
          "bindto": "recorder.inactiverecord",
          "help": "Time to keep recording for after a detection (s)"
        },
        {
          "text": "Buffer",
          "value": "",
          "type": "Int32",
          "min": 0,
          "max": 10,
          "bindto": "recorder.buffer",
          "help": "Buffer (seconds)"
        }
      ]
    },
    {
      "header": "Scheduling",
      "displayType": "Form",
      "items": [
        {
          "text": "Enabled",
          "value": "",
          "type": "Boolean",
          "bindto": "settings.schedule"
        },
        {
          "text": "Schedule",
          "value": "...",
          "type": "Button",
          "action": "showschedule"
        }
      ]
    },
    {
      "header": "Storage",
      "displayType": "Form",
      "items": [
        {
          "text": "Drive",
          "value": "",
          "type": "Select",
          "bindto": "settings.directoryIndex",
          "options": "DIRECTORIES",
          "help": "Add or edit locations in settings"
        },
        {
          "text": "Folder",
          "value": "",
          "type": "String",
          "bindto": "directory",
          "help": "Relative folder path from storage location"
        },
        {
          "text": "Management",
          "value": "",
          "type": "Boolean",
          "bindto": "settings.storagemanagement.enabled"
        },
        {
          "text": "Max Size (Mb)",
          "value": "",
          "type": "Int32",
          "bindto": "settings.storagemanagement.maxsize",
          "help": "Maximum size of folder (MB)"
        },
        {
          "text": "Max Age (Hours)",
          "value": "",
          "type": "Int32",
          "bindto": "settings.storagemanagement.maxage",
          "help": "Maximum age of content (hours)"
        }
      ]
    }
  ]
}